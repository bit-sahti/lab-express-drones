<h2>Update the drone</h2>

<form action="/drones/{{drone.id}}/edit" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{drone.name}}">

    <label for="propellers">Propellers</label>
    <input type="text" name="propellers" id="propellers" value="{{drone.propellers}}">

    <label for="maxSpeed">Speed</label>
    <input type="text" name="maxSpeed" value="{{drone.maxSpeed}}">

    <button type="submit">Submit</button>
</form>